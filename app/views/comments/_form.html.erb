<h3>Post a Comment</h3>

<!--%= form_for [ @article, @comment ] do |f| %-->
<%= form_for([@article, @article.comments.build]) do |f| %>
  <p>
    <%= f.label :author_name %><br/>
    <%= f.text_field :author_name %>
  </p>
  <p>
    <%= f.label :body %><br/>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>